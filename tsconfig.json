{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "Node",
    "target": "es5",
    "module": "ESNext",
    "outDir": "./dist",
    "lib": ["dom", "es6"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src"]
}
